pipeline {
    agent any
    parameters{
        booleanParam(name: 'param',defaultvalue:true, description:'')
    }
    enviroment
    {
        cred= credentials('credentials1')
    }

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }

        stage('hello 2')
        {
            when
            {
                expression {
                    params.param
                }
            }
            steps {
            echo 'hello 2'
            }
        }
    }
}
